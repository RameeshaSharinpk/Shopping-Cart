<section>
    <div class="container">
        <div class="row">
            <a href="admin/add-products" class="btn btn-primary ml-auto mt-2" style="width: 150px;">Add Products</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
               {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px" src="{{this.image}}"></td>
                </tr>
               {{/each}}
            </tbody>
        </table>
    </div>
</section>